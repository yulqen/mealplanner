# Production environment variables for Meal Planner
# Copy this file to /var/www/mealplanner/.env and fill in the values

# SECURITY: Generate a new secret key for production
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Set to False in production
DJANGO_DEBUG=False

# Your domain name (comma-separated if multiple)
DJANGO_ALLOWED_HOSTS=mealplanner.matthewlemon.com
